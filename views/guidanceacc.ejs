<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Guidance Account Management</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-red: #DC2626;
            --light-red: #FEF2F2;
            --accent-red: #F87171;
            --white: #FFFFFF;
            --gray-50: #F9FAFB;
            --gray-100: #F3F4F6;
            --gray-600: #4B5563;
            --gray-700: #374151;
            --gray-800: #1F2937;
            --gray-900: #111827;
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            background-color: var(--gray-50);
            color: var(--gray-900);
            line-height: 1.6;
            font-family: 'Inter', sans-serif;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .header {
            background: var(--white);
            padding: 24px 32px;
            box-shadow: var(--shadow-md);
            border-radius: 12px;
            margin-bottom: 24px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .header h1 {
            font-size: 28px;
            font-weight: 700;
            color: var(--gray-900);
            display: flex;
            align-items: center;
        }

        .header h1::before {
            content: '';
            width: 4px;
            height: 28px;
            background: var(--primary-red);
            margin-right: 12px;
        }

        .btn-back {
            padding: 10px 20px;
            background: var(--gray-100);
            color: var(--gray-700);
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            transition: background 0.2s;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn-back:hover {
            background: var(--gray-600);
            color: var(--white);
        }

        .section-card {
            background: var(--white);
            border-radius: 12px;
            box-shadow: var(--shadow-md);
            padding: 32px;
            margin-bottom: 24px;
        }

        .section-title {
            font-size: 20px;
            font-weight: 700;
            color: var(--gray-900);
            margin-bottom: 20px;
            display: flex;
            align-items: center;
        }

        .section-title::before {
            content: '';
            width: 4px;
            height: 20px;
            background: var(--primary-red);
            margin-right: 12px;
        }

        .form-group {
            margin-bottom: 16px;
        }

        .form-group label {
            display: block;
            font-weight: 500;
            margin-bottom: 8px;
            color: var(--gray-700);
        }

        .form-group input {
            width: 100%;
            padding: 10px 12px;
            border: 1px solid var(--gray-300);
            border-radius: 8px;
            font-size: 14px;
            transition: border-color 0.2s;
        }

        .form-group input:focus {
            outline: none;
            border-color: var(--primary-red);
            box-shadow: 0 0 0 3px var(--light-red);
        }

        .btn-primary {
            padding: 12px 24px;
            background: var(--primary-red);
            color: var(--white);
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s;
        }

        .btn-primary:hover {
            background: #B91C1C;
            transform: translateY(-1px);
            box-shadow: var(--shadow-md);
        }

        .data-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .data-table th {
            background: var(--gray-50);
            padding: 12px 16px;
            text-align: left;
            font-weight: 600;
            color: var(--gray-700);
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 2px solid var(--gray-200);
        }

        .data-table td {
            padding: 14px 16px;
            border-bottom: 1px solid var(--gray-100);
            color: var(--gray-900);
        }

        .data-table tbody tr {
            transition: background-color 0.2s;
        }

        .data-table tbody tr:hover {
            background: var(--gray-50);
        }

        .btn-delete {
            padding: 8px 16px;
            background: #FEE2E2;
            color: #DC2626;
            border: 1px solid #FCA5A5;
            border-radius: 6px;
            font-size: 12px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
        }

        .btn-delete:hover {
            background: #DC2626;
            color: var(--white);
        }

        .empty-state {
            text-align: center;
            padding: 40px;
            color: var(--gray-500);
        }

        .alert {
            padding: 12px 16px;
            border-radius: 8px;
            margin-bottom: 20px;
            font-size: 14px;
        }

        .alert-error {
            background: #FEE2E2;
            color: #DC2626;
            border: 1px solid #FCA5A5;
        }

        .alert-success {
            background: #D1FAE5;
            color: #059669;
            border: 1px solid #6EE7B7;
        }

        .form-row {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 16px;
        }
        /* Modal styles */
        .modal-backdrop {
            position: fixed;
            inset: 0;
            background: rgba(15, 23, 42, 0.5);
            display: none;
            align-items: center;
            justify-content: center;
            z-index: 9999;
            padding: 20px;
        }

        .modal-backdrop.show {
            display: flex;
        }

        .modal-card {
            background: var(--white);
            border-radius: 12px;
            box-shadow: var(--shadow-xl);
            max-width: 520px;
            width: 100%;
            padding: 20px 20px 16px 20px;
            transform: translateY(8px);
            transition: transform 160ms ease, opacity 160ms ease;
        }

        .modal-header {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 8px;
        }

        .modal-title {
            font-size: 18px;
            font-weight: 700;
            color: var(--gray-900);
        }

        .modal-body {
            color: var(--gray-700);
            margin: 12px 0 16px 0;
            font-size: 14px;
        }

        .modal-actions {
            display: flex;
            justify-content: flex-end;
            gap: 8px;
        }

        .btn-secondary {
            padding: 10px 16px;
            background: var(--gray-100);
            color: var(--gray-800);
            border-radius: 8px;
            border: none;
            cursor: pointer;
        }

        .btn-danger {
            padding: 10px 16px;
            background: var(--primary-red);
            color: var(--white);
            border-radius: 8px;
            border: none;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Guidance Account Management</h1>
            <a href="/ictcoorLanding" class="btn-back">
                <i class="fas fa-arrow-left"></i>
                Back to Dashboard
            </a>
        </div>

        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-error">
                <i class="fas fa-exclamation-circle"></i>
                <%= error %>
            </div>
        <% } %>

        <!-- Create New Guidance Account Section -->
        <div class="section-card">
            <h2 class="section-title">Create New Guidance Account</h2>
            <form action="/create-guidance-account" method="POST">
                <div class="form-row">
                    <div class="form-group">
                        <label for="fullname">Full Name <span style="color: red;">*</span></label>
                        <input type="text" id="fullname" name="fullname" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="username">Username <span style="color: red;">*</span></label>
                        <input type="text" id="username" name="username" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Password <span style="color: red;">*</span></label>
                        <input type="password" id="password" name="password" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="contact_number">Contact Number</label>
                    <input type="tel" id="contact_number" name="contact_number">
                </div>
                <button type="submit" class="btn-primary">
                    <i class="fas fa-plus"></i> Create Account
                </button>
            </form>
        </div>

        <!-- Existing Accounts Section -->
        <div class="section-card">
            <h2 class="section-title">Existing Guidance Accounts</h2>
            <% if (guidanceAccounts.length > 0) { %>
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Full Name</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Contact Number</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% guidanceAccounts.forEach(account => { %>
                            <tr>
                                <td><%= account.id %></td>
                                <td><strong><%= account.fullname %></strong></td>
                                <td><%= account.username %></td>
                                <td><%= account.email || 'N/A' %></td>
                                <td><%= account.contact_number || 'N/A' %></td>
                                <td>
                                    <% if (account.is_active) { %>
                                        <span style="color: #059669; font-weight: 600;">
                                            <i class="fas fa-check-circle"></i> Active
                                        </span>
                                    <% } else { %>
                                        <span style="color: #DC2626; font-weight: 600;">
                                            <i class="fas fa-times-circle"></i> Inactive
                                        </span>
                                    <% } %>
                                </td>
                                <td>
                                    <form action="/delete-guidance-account" method="POST" class="delete-form" style="display:inline;"
                                          data-id="<%= account.id %>" data-name="<%= account.fullname %>" data-username="<%= account.username %>">
                                        <input type="hidden" name="id" value="<%= account.id %>">
                                        <button type="button" class="btn-delete js-open-delete-modal">
                                            <i class="fas fa-trash-alt"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } else { %>
                <div class="empty-state">
                    <i class="fas fa-user-shield" style="font-size: 48px; color: var(--gray-300); margin-bottom: 16px;"></i>
                    <p>No guidance accounts found. Create one above to get started.</p>
                </div>
            <% } %>
        </div>
    </div>
    <!-- Delete confirmation modal -->
    <div class="modal-backdrop" id="deleteModal" aria-hidden="true">
        <div class="modal-card" role="dialog" aria-modal="true" aria-labelledby="deleteModalTitle">
            <div class="modal-header">
                <div style="width:44px;height:44px;border-radius:8px;background:#FEF2F2;display:flex;align-items:center;justify-content:center;color:var(--primary-red);">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <div>
                    <div id="deleteModalTitle" class="modal-title">Confirm deletion</div>
                    <div style="font-size:12px;color:var(--gray-600);">This action cannot be undone.</div>
                </div>
            </div>
            <div class="modal-body" id="deleteModalBody">
                Are you sure you want to delete this guidance account?
            </div>
            <div class="modal-actions">
                <button type="button" class="btn-secondary js-close-delete-modal">Cancel</button>
                <button type="button" class="btn-danger js-confirm-delete">Delete account</button>
            </div>
        </div>
    </div>

    <script>
        (function(){
            const openButtons = document.querySelectorAll('.js-open-delete-modal');
            const modal = document.getElementById('deleteModal');
            const modalBody = document.getElementById('deleteModalBody');
            const closeBtns = document.querySelectorAll('.js-close-delete-modal');
            const confirmBtn = document.querySelector('.js-confirm-delete');
            let currentForm = null;

            function openModal(formEl) {
                const name = formEl.getAttribute('data-name') || '';
                const username = formEl.getAttribute('data-username') || '';
                modalBody.textContent = `Are you sure you want to permanently delete ${name || username || 'this account'}?`;
                modal.classList.add('show');
                modal.setAttribute('aria-hidden', 'false');
                currentForm = formEl;
                // focus confirm for accessibility
                setTimeout(()=> confirmBtn.focus(), 120);
            }

            function closeModal() {
                modal.classList.remove('show');
                modal.setAttribute('aria-hidden', 'true');
                currentForm = null;
            }

            openButtons.forEach(btn => {
                btn.addEventListener('click', function(e){
                    const form = e.target.closest('form.delete-form');
                    if (form) openModal(form);
                });
            });

            closeBtns.forEach(b => b.addEventListener('click', closeModal));

            // close on backdrop click
            modal.addEventListener('click', function(e){
                if (e.target === modal) closeModal();
            });

            // keyboard: Esc to close
            document.addEventListener('keydown', function(e){
                if (e.key === 'Escape' && modal.classList.contains('show')) {
                    closeModal();
                }
            });

            confirmBtn.addEventListener('click', function(){
                if (!currentForm) return closeModal();
                // submit the form
                currentForm.submit();
            });
        })();
    </script>
</body>
</html>
