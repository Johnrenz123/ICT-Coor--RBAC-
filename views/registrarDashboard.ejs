            }

            .table-section {
                border-radius: 8px;
            }

            .table th,
            .table td {
                padding: 12px;
                font-size: 13px;
            }
        }

        @media (max-width: 1024px) {
            main {
                margin-left: 250px;
                padding: 24px 24px;
            }

            .page-wrap {
                padding: 24px;
            }

            .grid {
                grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
                gap: 16px;
            }
        }

        @media (max-width: 768px) {
            .sidebar {
                width: 200px;
                padding: 16px;
                gap: 12px;
            }

            main {
                margin-left: 200px;
                padding: 16px 16px;
            }

            .page-wrap {
                padding: 16px;
                border-radius: 12px;
            }

            .grid {
                grid-template-columns: 1fr;
                gap: 12px;
            }

            .card-stat {
                padding: 20px;
                min-height: 120px;
            }

            .stat-value {
                font-size: 28px;
            }

            .form-section {
                padding: 16px;
                margin-bottom: 16px;
            }

            .table-section {
