                gap: 16px;
            }

            .insights-grid {
                grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
                gap: 16px;
            }
        }

        @media (max-width: 768px) {
            .sidebar {
                width: 200px;
                padding: 16px;
